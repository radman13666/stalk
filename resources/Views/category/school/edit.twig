{% extends 'layout/master.twig' %}

{% block content %}

    <div class="card-header">
        <h4 class="m-b-0 text-info "><i class="fa fa-plus-edit" aria-hidden="true"></i>
            Update {{ school.school_name }}
         </h4>
    </div>
 
    <div class="card-body">
        <form action="{{ path_for('school.edit',{id:school.id})}}"  method ="POST" class="form-horizontal">
             <div class="form-body">
                <h3 class="box-title m-t-15">School or Institution Information</h3>
                <hr class="m-t-0 m-b-40">
                <div class="row">
                    <div class="col-md-10">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">School Name <span class="text-danger">*</span>
                            </label>
                            <div class="col-md-9">
                                <input type="text"  name="school_name" class="form-control {{ errors.school_name ? 'is-invalid' :'' }} " 
                                     placeholder="School or Institution name " value="{{ school.school_name}}">
                                 {% if errors.school_name %}
                                      <div class="form-control-feedback invalid-feedback"> {{ errors.school_name | first }} </div> 
                                {% endif %}
                                </div>
                        </div>
                    </div>
                </div>
                <!--/row-->

                  <div class="row">
                    <div class="col-md-10">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">School Registration No.
                            </label>
                            <div class="col-md-9">
                                <input type="text"  name="school_code" class="form-control {{ errors.school_code ? 'is-invalid' :'' }} " 
                                     placeholder="School /Institution  Reg No. if any " value="{{ school.school_code}}">
                                 {% if errors.school_code %}
                                      <div class="form-control-feedback invalid-feedback"> {{ errors.school_code | first }} </div> 
                                {% endif %}
                                </div>
                        </div>
                    </div>
                </div>
                <!--/row-->
                <div class="row">
                    <!--/span-->
                    <div class="col-md-10">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Level  <span class="text-danger">*</span></label>
                            <div class="col-md-9">
                                <select class="form-control custom-select {{ errors.level ? 'is-invalid' :'' }}" name="level">
                                     <option value="{{school.level}}">{{ school.level | capitalize}}</option>
                                    {% for level in helper.levels %}
                                    <option value="{{ level.name }}">{{ level.name | capitalize }}</option>
                                    {% endfor %}
                                </select>

                                {% if errors.level %}
                                      <div class="form-control-feedback invalid-feedback"> {{ errors.level | first }} </div> 
                                {% endif %}

                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <!--/row-->

                  <!--/row-->
                <div class="row">
                    <!--/span-->
                    <div class="col-md-10">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">District  <span class="text-danger">*</span></label>
                            <div class="col-md-9">
                                <select class="form-control custom-select {{ errors.district_id ? 'is-invalid' :'' }}" name="district_id">
                                  <option value="{{ school.district_id}}">{{ school.district_name }}</option>

                                    {% for district in  helper.districts %}
                                     <option value="{{ district.id }}">{{ district.district_name }}</option>
                                    {% endfor %}
                                </select>

                                {% if errors.district_id %}
                                      <div class="form-control-feedback invalid-feedback"> {{ errors.district_id | first }} </div> 
                                {% endif %}

                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <!--/row-->
                <hr>
           
                  <div class="row">
                    <div class="col-md-10">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Phone Contact
                            </label>
                            <div class="col-md-9">
                                <input type="text"  name="school_phone" class="form-control {{ errors.school_phone ? 'is-invalid' :'' }} " 
                                     placeholder="" value="{{ school.school_phone}}">
                                 {% if errors.school_phone %}
                                      <div class="form-control-feedback invalid-feedback"> {{ errors.school_phone | first }} </div> 
                                {% endif %}
                                </div>
                        </div>
                    </div>
                </div>
                
                <!--/row-->


                  <div class="row">
                    <div class="col-md-10">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Email Address
                            </label>
                            <div class="col-md-9">
                                <input type="email"  name="school_email" class="form-control {{ errors.school_email ? 'is-invalid' :'' }} " 
                                     placeholder="" value="{{ school.school_email}}">
                                 {% if errors.school_email %}
                                      <div class="form-control-feedback invalid-feedback"> {{ errors.school_email | first }} </div> 
                                {% endif %}
                                </div>
                        </div>
                    </div>
                </div>
                
                <!--/row-->


                  <div class="row">
                    <div class="col-md-10">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Website
                            </label>
                            <div class="col-md-9">
                                <input type="url"  name="school_website" class="form-control {{ errors.school_website ? 'is-invalid' :'' }} " 
                                     placeholder="e.g http://example.com" value="{{ school.school_website}}">
                                 {% if errors.school_website %}
                                      <div class="form-control-feedback invalid-feedback"> {{ errors.school_website | first }} </div> 
                                {% endif %}
                                </div>
                        </div>
                    </div>
                </div>
                
                <!--/row-->
                

                   <div class="row">
                    <div class="col-md-10">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Address
                            </label>
                            <div class="col-md-9">
                                <input type="text"  name="school_address" class="form-control {{ errors.school_address ? 'is-invalid' :'' }} " 
                                     placeholder="" value="{{ school.school_address}}">
                                 {% if errors.school_address %}
                                      <div class="form-control-feedback invalid-feedback"> {{ errors.school_address | first }} </div> 
                                {% endif %}
                                </div>
                        </div>
                    </div>
                </div>
                
                <!--/row-->
                <hr>

                   <!--/row-->
                <div class="row">
                    <!--/span-->
                    <div class="col-md-10">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Bank Name </label>
                           
                            <div class="col-md-9">
                                <select class="form-control custom-select {{ errors.bank_name ? 'is-invalid' :'' }}"
                                 name="bank_name">
                                    <option value="{{ school.bank_name}}">{{ school.bank_name}}</option>

                                    {% for bank in  helper.banks %}
                                     <option value="{{ bank.bank_name }}">{{ bank.bank_name }}</option>
                                    {% endfor %}
                                </select>

                                {% if errors.bank_name %}
                                      <div class="form-control-feedback invalid-feedback"> {{ errors.bank_name | first }} </div> 
                                {% endif %}

                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <!--/row-->

                 <div class="row">
                    <div class="col-md-10">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Account Number
                            </label>
                            <div class="col-md-9">
                                <input type="text"  name="bank_account" class="form-control {{ errors.bank_account ? 'is-invalid' :'' }} " 
                                     placeholder="Bank Account Number" value="{{ school.bank_account}}">
                                 {% if errors.bank_account %}
                                      <div class="form-control-feedback invalid-feedback"> {{ errors.bank_account | first }} </div> 
                                {% endif %}
                                </div>
                        </div>
                    </div>
                </div>
                
                <!--/row-->
                <div class="row">
                    <div class="col-md-10">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Bank Address
                            </label>
                            <div class="col-md-9">
                                <input type="text"  name="bank_address" class="form-control {{ errors.bank_address ? 'is-invalid' :'' }} " 
                                     placeholder="" value="{{ school.bank_address}}">
                                 {% if errors.bank_address %}
                                      <div class="form-control-feedback invalid-feedback"> {{ errors.bank_address | first }} </div> 
                                {% endif %}
                                </div>
                        </div>
                    </div>
                </div>
                
                <!--/row-->
                <input type="hidden" name="_METHOD" value="PUT" >

            <div class="form-actions ">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="pull-right">
                             
                            </div>
                        </div>
                    </div>

                    <div class="col-md-1">
                        <div class="row">
                      
                           
                                <button type="submit" class="btn  btn-primary btn-block">
                                   Update
                                </button>
                            </div>
                        
                    </div>

                </div>
            </div>

            {{ csrf.field | raw}}

        </form>
    </div>
</div>

{% endblock %}