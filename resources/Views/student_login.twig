{% extends 'layout/app.twig' %}

{% block body %}


 <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
      <h5 class="my-0 mr-md-auto font-weight-normal">IABD</h5>
      <nav class="my-2 my-md-0 mr-md-3">
        <a class="p-2 text-dark" href="{{ path_for('auth.login')}}">Home</a>
   
      {# <a class="btn btn-outline-primary" href="#">Student Login</a> #}
      </nav>
       <a class="btn btn-outline-primary" href="{{ path_for('auth.student')}}">Student Login</a>
    </div>


        <div class="unix-login">
            <div class="container-fluid">
            
                <div class="row justify-content-center">


                    <div class="col-md-4">
                                    <h2  class="stud_title text-success">
                                     &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
                                    <i class="fa fa-graduation-cap" aria-hidden="true"></i>
                                    &nbsp;&nbsp; &nbsp;&nbsp;Student Login page </h2>
                        <div class="login-content card">
  

                            <div class="login-form">

                              
                                <h2 class="text-primary float-center">
                                <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                                 &nbsp;&nbsp; &nbsp;&nbsp;
                                Login
                                </h2>

                                <small>
                                {% include 'layout/partials/flash.twig' %}
                                </small>

                                <form method="POST" action="{{ path_for('auth.student')}}">
                                    <div class="form-group">
                                        <label class="text-capitalize">Student ID</label>
                                        <input type="text" value="{{ old.bursary_id}}" name="bursary_id" class="form-control" placeholder="Student  ID">
                                        <small class="text-success">Student  ID</small>
                                    </div>
                                    <div class="form-group">
                                        <label class="text-capitalize">Full Name</label>
                                        <input type="text" name="password" value="{{ old.password}}" 
                                        class="form-control" placeholder="Surename First Name">
                                        <small class="text-muted">e.g Okello Daniel</small>
                                    </div>
                                    <div class="checkbox">
                                        
                                        <label class="pull-right">
        										{# <a href="#">Forgotten Password?</a> #}
        								</label>

                                    </div>
                                    <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Sign in</button>
                                    <div class="register-link m-t-15 text-center">  
                                    </div>

                                    {{ csrf.field | raw }}
                                </form>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>

{% endblock %}